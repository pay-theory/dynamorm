{
  "name": "@pay-theory/dynamorm-ts",
  "version": "1.1.0-rc.3",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./testkit": {
      "types": "./dist/testkit/index.d.ts",
      "import": "./dist/testkit/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "tsx test/run-unit.ts",
    "test:integration": "tsx test/run-integration.ts",
    "example:local": "tsx examples/local.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.758.0",
    "@aws-sdk/client-kms": "^3.758.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@types/node": "^20.17.25",
    "eslint": "^8.57.1",
    "prettier": "^3.5.3",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3"
  }
}
